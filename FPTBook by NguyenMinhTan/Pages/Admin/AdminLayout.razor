@inherits LayoutComponentBase


<div class="text-light p-3" style="background-color:saddlebrown; font-family:'Times New Roman', Times, serif; padding-bottom:10px">
	<div class="container-fluid">
		<div class="row">
			<div class="col-10">
				<span class="navbar-brand ml-2"> FPTBook - Administration page </span>
			</div>
			<div class="col-2 text-end">
				<a class="btn btn-sm btn-danger" href="/account/logout"> Log out </a>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="row p-2">
		<div class="col-3">
			<div class="d-grid gap-1">
				<NavLink class="btn btn-outline-danger"
							href="/admin/products"
							ActiveClass="btn-warning text-white"
							Match="NavLinkMatch.Prefix">
					Products
				</NavLink>
				<NavLink class="btn btn-outline-danger"
							href="/admin/orders"
							ActiveClass="btn-warning text-white"
							Match="NavLinkMatch.Prefix">
					Orders
				</NavLink>
			</div>
		</div>
		<div class="col">
			@Body
		</div>
	</div>
</div>